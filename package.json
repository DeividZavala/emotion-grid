{
  "name": "@mverissimoo/emotion-grid",
  "version": "1.0.0",
  "main": "dist/emotion-grid.cjs.js",
  "module": "dist/emotion-grid.esm.js",
  "repository": "git@github.com:mverissimo/emotion-grid.git",
  "author": "Matheus Verissimo <mverissimoo@hotmail.com>",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "sideEffects": false,
  "scripts": {
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve",
    "postinstall": "preconstruct dev",
    "lint": "eslint src/* --ext .ts,.tsx",
    "lint:ci": "yarn lint --format junit -o reports/eslint/results.json",
    "lint:fix": "yarn lint --fix",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --runInBand --json --outputFile=reports/jest/results.json",
    "build": "preconstruct build",
    "release": "yarn build && npx semantic-release"
  },
  "preconstruct": {
    "globals": {
      "react": "React",
      "react-dom": "ReactDOM"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged ",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn lint:fix",
      "git add"
    ],
    "**/**/**/*.+(js|json|jsx|ts|tsx|mdx|md)": [
      "pretty-quick --staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@preconstruct/cli": "^1.1.14",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-jest": "^26.0.1",
    "cz-conventional-changelog": "^3.2.0",
    "docz": "^2.3.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "eslint-plugin-testing-library": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-emotion": "^10.0.32",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^17.0.8",
    "stylelint": "^13.5.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
